<div class="container mt-4">
    <div>
        <h1 class="fw-bold text-center mb-4">Save any kind of movies 🎬</h1>
    </div>

    <div>

        <div class="card rounded">
        <h3 class="fw-bold card-header"> My lists: </h3>
            <ul class="list-group list-group-flush">
                <% @lists.each do |list| %>
                    <li class="list-group-item">
                        <%= link_to "🍿 #{list.name}".html_safe, list_path(list), :class => "text-decoration-none text-warning" %>
                    </li>
                <% end %>
        </div>
        <div>
            <%= link_to 'Create a new movie list <i class="fa-solid fa-plus"></i> '.html_safe, new_list_path, class: "btn btn-primary my-5" %>
        </div>
    </div>
</div>
